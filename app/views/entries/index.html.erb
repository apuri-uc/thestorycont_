<div>
  <div>
    <h1>
      List of all entries
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new entry
    </h2>

    <form action="/insert_entry" method="post">
      <div>
        <label for="day_id_box">
          Day
        </label>

        <input type="text" id="day_id_box" name="query_day_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="daily_entry_box">
          Daily entry
        </label>

        <input type="text" id="daily_entry_box" name="query_daily_entry">
      </div>

      <button>
        Create entry
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Day
        </th>

        <th>
          User
        </th>

        <th>
          Daily entry
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_entries.each do |an_entry| %>
      <tr>
        <td>
          <%= an_entry.id %>
        </td>

        <td>
          <%= an_entry.day_id %>
        </td>

        <td>
          <%= an_entry.user_id %>
        </td>

        <td>
          <%= an_entry.daily_entry %>
        </td>

        <td>
          <%= time_ago_in_words(an_entry.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_entry.updated_at) %> ago
        </td>

        <td>
          <a href="/entries/<%= an_entry.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
