<div>
  <div>
    <h1>
      Goal details
    </h1>

    <div>
      <div>
        <a href="/goals">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_goal/<%= @the_goal.id %>">
          Delete goals
        </a>
      </div>
    </div>

    <div>
  <div>
    <h2>
      Edit goals
    </h2>

    <form action="/modify_goal/<%= @the_goal.id %>"  method="post" >
      <div>
        <label for="g1_box">
          G1
        </label>

        <input type="text" id="g1_box" name="query_g1" value="<%= @the_goal.g1 %>">
      </div>

      <div>
        <label for="g2_box">
          G2
        </label>

        <input type="text" id="g2_box" name="query_g2" value="<%= @the_goal.g2 %>">
      </div>

      <div>
        <label for="g3_box">
          G3
        </label>

        <input type="text" id="g3_box" name="query_g3" value="<%= @the_goal.g3 %>">
      </div>

      <button>
        Update
      </button>
    </form>
  </div>
</div>

<hr>

    <dl>
      <dt>
        Goal 1
      </dt>
      <dd>
        <%= @the_goal.g1 %>
      </dd>

      <dt>
        Goal 2
      </dt>
      <dd>
        <%= @the_goal.g2 %>
      </dd>

      <dt>
        Goal 3
      </dt>
      <dd>
        <%= @the_goal.g3 %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_goal.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_goal.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>
